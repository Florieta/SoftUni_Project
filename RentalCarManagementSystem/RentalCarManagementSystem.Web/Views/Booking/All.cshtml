@model IEnumerable<AllBookingsViewModel>


@{
    ViewBag.Title = "All Bookings";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">All Bookings</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Pick up Date</th>
                            <th>Drop off Date</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.FullName</td>
                                <td>@booking.PickUpDateAndTime</td>
                                <td>@booking.DropOffDateAndTime</td>
                                <td>@String.Format("{0:f2}", booking.TotalAmount) BGN</td>
                                <td>
                                    <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id"
                                   class="btn btn-info">Booking Details</a>
                                </td>
                                 <td>
                                    <a asp-controller="Car" asp-action="Details" asp-route-id="@booking.CarId"
                                   class="btn btn-warning">Car Details</a>
                                </td>
                                @if (booking.IsRented == false)
                                {
                                    <td>
                                        <form asp-controller="Booking" asp-action="CheckIn"
                                      asp-route-id="@booking.Id" method="post">
                                            <input class="btn btn-success" type="submit" value="CheckIn" />
                                        </form>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <form asp-controller="Booking" asp-action="CheckOut"
                                      asp-route-id="@booking.Id" method="post">
                                            <input class="btn btn-danger" type="submit" value="CheckOut" />
                                        </form>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

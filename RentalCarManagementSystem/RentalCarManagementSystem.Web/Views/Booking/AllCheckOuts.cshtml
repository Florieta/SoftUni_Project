@model IEnumerable<AllBookingsViewModel>


@{
    ViewBag.Title = "All Incoming Bookings";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">All CheckIns</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Pick up Date</th>
                            <th>Drop off Date</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.DropOffDateAndTime.ToShortDateString()</td>
                            </tr>
                            <tr>
                                <td>@booking.FullName</td>
                                <td>@booking.PickUpDateAndTime</td>
                                <td>@booking.DropOffDateAndTime</td>
                                <td>@String.Format("{0:f2}", booking.TotalAmount) BGN</td>
                                <td>
                                    <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id"
                                   class="btn btn-warning">Details</a>
                                </td>
                                <td>
                                    <form asp-controller="Booking" asp-action="CheckOut"
                                      asp-route-id="@booking.Id" method="post">
                                        <input class="btn btn-danger" type="submit" value="Check-Out" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

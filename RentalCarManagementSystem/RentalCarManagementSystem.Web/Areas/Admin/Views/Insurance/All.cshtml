@model IEnumerable<InsuranceViewModel>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Insurances</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Type of Insurance</th>
                            <th>Cost Per Day</th>
                            <th>Actions</th>
                            <th>
                                <a asp-area="Admin" asp-action="Add" asp-controller="Insurance"  class="btn btn-block btn-outline-success btn-xs">Add new insurance</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var insurance in Model)
                        {
                            <tr>
                                <td>@insurance.TypeOfInsurance</td>
                                <td>@insurance.CostPerDay BGN</td>
                                <td>
                                    <a asp-area="Admin" asp-action="Edit" asp-controller="Insurance" asp-route-insuranceCode="@insurance.InsuranceCode" class="btn btn-block btn-outline-info btn-xs">Edit </a>
                                    <form asp-area="Admin" asp-controller="Insurance" asp-action="Remove" asp-route-insuranceCode="@insurance.InsuranceCode" method="post">
                                        <input class="btn btn-block btn-outline-danger btn-xs" type="submit" value="Remove" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>







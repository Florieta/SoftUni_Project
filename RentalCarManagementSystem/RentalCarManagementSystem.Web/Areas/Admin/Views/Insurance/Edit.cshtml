@using RentalCarManagementSystem.Core.Models.Admin

@model InsuranceViewModel

@{
    ViewBag.Title = "Edit insurance";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Edit Insurance Form</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.TypeOfInsurance">Type of Insurance</label>
                        <input asp-for="@Model.TypeOfInsurance" type="text" class="form-control" placeholder="Enter insurance type..." />
                        <span asp-validation-for="TypeOfInsurance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CostPerDay">Cost per day</label>
                        <input asp-for="@Model.CostPerDay" type="text" class="form-control" placeholder="Enter cost per day..." />
                        <span asp-validation-for="CostPerDay" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }


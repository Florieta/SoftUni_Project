@model AllCarsQueryModel

@{
    ViewBag.Title = "All Cars";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row">
        <div class="form-group col-md-3 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="@Model.SearchRegNumber">Registration Number</label>
                <input asp-for="@Model.SearchRegNumber" class="form-control" placeholder="...">
            </div>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.SearchModel">Car Make</label>
            <input asp-for="@Model.SearchMake" class="form-control" placeholder="...">
        </div>
        <div class="form-group  col-md-3">
            <div class="form-group">
                <label asp-for="@Model.SearchModel">Car Model</label>
                <input asp-for="@Model.SearchModel" class="form-control" placeholder="...">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@if (!Model.Cars.Any())
{
    <h2 class="text-center">No car found with this criteria!</h2>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All Cars</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>Make</th>
                                <th>Model</th>
                                <th>Registration Number</th>
                                <th>Status</th>
                                <th>Price Per Day</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in Model.Cars)
                            {
                                <partial name="_PartialCarAll" model="@car" />
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}




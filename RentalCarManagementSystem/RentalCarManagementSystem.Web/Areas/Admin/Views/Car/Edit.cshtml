@using RentalCarManagementSystem.Core.Models.Admin

@model EditCarViewModel

@{
    ViewBag.Title = "Edit car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Edit Car Form</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.Make">Car Make</label>
                        <input asp-for="@Model.Make" type="text" class="form-control" placeholder="Enter Make..." />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Model">Model</label>
                        <input asp-for="@Model.Model" type="text" class="form-control" placeholder="Enter Model..." />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="@Model.MakeYear">Make Year</label>
                    <input asp-for="@Model.MakeYear" rows="3" class="form-control" placeholder="Enter Make Year..." />
                    <span asp-validation-for="MakeYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.RegNumber">Registration Number</label>
                    <input asp-for="@Model.RegNumber" rows="3" class="form-control" placeholder="Enter Registration Number..." />
                    <span asp-validation-for="RegNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label asp-for="@Model.Color">Color</label>
                        <input asp-for="@Model.Color" type="text" class="form-control" placeholder="Enter Color..." />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.GearBox">Gear box</label>
                        <input asp-for="@Model.GearBox" type="text" class="form-control" placeholder="Enter Gear Box..." />
                        <span asp-validation-for="GearBox" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.Description">Description</label>
                        <input asp-for="@Model.Description" type="text" class="form-control" placeholder="Enter Description..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ImageUrl">Image</label>
                        <input asp-for="@Model.ImageUrl" type="text" class="form-control"  />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.DailyRate">DailyRate</label>
                        <input asp-for="@Model.DailyRate" type="number" class="form-control"  />
                        <span asp-validation-for="DailyRate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.CategoryId" class="form-label">Categories</label>
                        <select asp-for="@Model.CategoryId" class="form-control">
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.CategoryName</option>
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

